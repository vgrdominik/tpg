{% form_theme form '@CTICBridgeSylius/Form/theme.html.twig' %}

<div class="ui grid">
    {{ form_errors(form) }}
    <div class="ui four wide column">
        {{ form_row(form.channel) }}
    </div>
    <div class="ui twelve wide column">
        &nbsp;
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorPrimary) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorSecondary) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorAccent) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorSuccess) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorError) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.colorWarning) }}
    </div>
    <div class="ui eight wide column">
        {{ form_row(form.colorInfo) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.styleButton) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.styleForm) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.styleCard) }}
    </div>
    <div class="ui four wide column">
        {{ form_row(form.styleDialogCard) }}
    </div>
    <div class="ui eight wide column">
        {{ form_row(form.enabled) }}
    </div>
</div>
