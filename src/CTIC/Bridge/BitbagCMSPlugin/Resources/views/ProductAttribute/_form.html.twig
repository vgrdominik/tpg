{% from '@SyliusAdmin/Macro/translationForm.html.twig' import translationForm %}
{% form_theme form '@CTICBridgeBitbagCMSPlugin/Form/ProductAttribute/theme.html.twig' %}

{{ form_errors(form) }}

<div class="ui segment">
    <div class="two fields">
        {{ form_row(form.code) }}
        {{ form_row(form.position) }}
    </div>
    <div class="two fields">
        {{ form_row(form.type) }}
        {{ form_row(form.landing, {'remote_url': path('ctic_bridget_bitbag_cms_plugin_admin_ajax_landing_by_name_phrase'), 'load_edit_url': path('ctic_bridge_bitbag_cms_plugin_admin_ajax_landing_by_code')}) }}
    </div>
</div>
{% if form.configuration is defined %}
<div class="ui segment">
    <h4 class="ui dividing header">{{ 'sylius.ui.configuration'|trans }}</h4>
    {% if form.configuration is defined %}
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'sylius.ui.configuration'|trans }}</h4>
            {% for field in form.configuration %}
                {{ form_row(field) }}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endif %}

{{ translationForm(form.translations) }}