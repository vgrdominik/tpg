{% macro customMenu(extension_class) %}
    <ul class="main-menu{{ extension_class }}">
        <li>
            <a href="{{ path('bitbag_sylius_cms_plugin_shop_page_show', {'slug' : 'ctic.radge.menu.schedule_slug'|trans}) }}">{{ 'ctic.radge.menu.schedule'|trans }}</a>
        </li>
        <li>
            <a href="{{ 'ctic.radge.menu.rol_link'|trans }}">{{ 'ctic.radge.menu.rol'|trans }}</a>
        </li>
    </ul>
{% endmacro %}


{% import _self as macros %}

<!-- Header desktop -->
<div class="container-menu-desktop">
    <div class="wrap-menu-desktop">
        <nav class="limiter-menu-desktop container center-layer">

            <!-- Logo desktop -->
            <a href="{{ path('sylius_shop_homepage') }}" class="logo">
                <img src="{{ asset('assets/shop/img/logo.png') }}" alt="{{ 'ctic.ui.your_store'|trans }}" class="ui small image" />
            </a>

            {{ sonata_block_render_event('sylius.shop.layout.header') }}

            {{ macros.customMenu() }}

            {{ render(url('sylius_shop_partial_taxon_index_by_code', {'code': 'category', 'template': '@SyliusShop/Taxon/_horizontalMenu.html.twig'})) }}

            <!-- Icon header -->
            <div class="wrap-icon-header flex-w flex-r-m">
                {{ render(path('bitbag_sylius_cms_plugin_shop_page_show_link_by_code', {'code' : 'faqs', 'template' : '@SyliusShop/_headerLink.html.twig'})) }}

                {{ sonata_block_render_event('sylius.shop.layout.after_security_widget') }}

                {{ render(controller('sylius.controller.shop.locale_switch:renderAction')) }}

                {{ sonata_block_render_event('sylius.shop.layout.before_currency_switcher') }}

                {{ render(controller('sylius.controller.shop.currency_switch:renderAction')) }}

                {{ sonata_block_render_event('sylius.shop.layout.before_security_widget') }}

                {{ render(controller('sylius.controller.shop.security_widget:renderAction')) }}

                {{ render(url('sylius_shop_partial_cart_summary', {'template': '@SyliusShop/Cart/_widget.html.twig'})) }}

                <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                    <i class="zmdi zmdi-search"></i>
                </div>
            </div>
        </nav>
    </div>
</div>

<!-- Header Mobile -->
<div class="wrap-header-mobile">
    <!-- Logo moblie -->
    <div class="logo-mobile">
        <a href="{{ path('sylius_shop_homepage') }}"><img src="{{ asset('assets/shop/img/logo.png') }}" alt="{{ 'ctic.ui.your_store'|trans }}"></a>
    </div>

    <!-- Icon header -->
    <div class="wrap-icon-header flex-w flex-r-m m-r-15">
        <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
            <i class="zmdi zmdi-search"></i>
        </div>

        {{ render(url('sylius_shop_partial_cart_summary', {'template': '@SyliusShop/Cart/_widgetMobile.html.twig'})) }}
    </div>

    <!-- Button show menu -->
    <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
        <span class="hamburger-box">
            <span class="hamburger-inner"></span>
        </span>
    </div>
</div>


<!-- Menu Mobile -->
<div class="menu-mobile">
    <ul class="topbar-mobile">
        <li>
            {{ render(path('bitbag_sylius_cms_plugin_shop_page_show_link_by_code', {'code' : 'faqs', 'template' : '@SyliusShop/_headerLink.html.twig'})) }}

            {{ render(controller('sylius.controller.shop.security_widget:renderAction')) }}

            {{ render(controller('sylius.controller.shop.locale_switch:renderAction')) }}

            {{ render(controller('sylius.controller.shop.currency_switch:renderAction')) }}
        </li>
    </ul>

    {{ macros.customMenu('-m') }}

    {{ render(url('sylius_shop_partial_taxon_index_by_code', {'code': 'category', 'template': '@SyliusShop/Taxon/_mobileMenu.html.twig'})) }}
</div>

