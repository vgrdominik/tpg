{{ sonata_block_render_event('sylius.shop.product.index.before_search', {'products': products}) }}

<div class="container center-layer">

    <div class="pos-relative float-r flex-w flex-c-m m-tb-10">
        <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
            <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
            <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
            {{ 'ctic.ui.filter'|trans }}
        </div>

        <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
            <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
            <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
            {{ 'ctic.ui.search'|trans }}
        </div>
    </div>
    <div class="clear">&nbsp;</div>

    <form method="get" id="search_form_taxon" action="#">
        <!-- Filters -->
        <div class="dis-none panel-filter w-full p-t-10 p-b-15">
            <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                {% include '@SyliusShop/Product/Index/_filterForm.html.twig' %}
                <!--<div class="sui center-layer">
                    <button type="submit" class="ui positive icon labeled button pos-relative float-l"><i class="check icon"></i> {{ 'ctic.ui.apply'|trans }}</button>
                    <a href="#" class="ui negative icon labeled button pos-relative float-r">
                        <i class="cancel icon"></i> {{ 'ctic.ui.cancel'|trans }}
                    </a>
                    <div class="clear">&nbsp;</div>
                </div>-->
            </div>
        </div>

        <!-- Search -->
        <div class="dis-none panel-search w-full p-t-10 p-b-15">
            <div class="bor8 dis-flex p-l-15">
                <div class="sui w-full">
                    <div class="ui left labeled button w-full">
                        {{ form_widget(form.name, {'attr': {'class': 'ui basic w-full h-55', 'placeholder': 'ctic.ui.search'|trans } }) }}

                        <a href="#" onclick="document.getElementById('search_form_taxon').submit()" class="ui basic left pointing label">
                            <i class="search icon"></i>
                            {{ 'ctic.ui.search'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{{ sonata_block_render_event('sylius.shop.product.index.after_search', {'products': products}) }}
