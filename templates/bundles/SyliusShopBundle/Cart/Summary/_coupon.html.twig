<div class="flex-w flex-m m-r-20 m-tb-5" id="sylius-coupon" {{ sylius_test_html_attribute('cart-promotion-coupon') }}>
    <div class="ui five wide column">
        {{ form_widget(form.promotionCoupon, sylius_test_form_attribute('cart-promotion-coupon-input')|sylius_merge_recursive({'attr': {'form': main_form, 'placeholder': 'sylius.ui.enter_your_code'|trans~'...'}})) }}
    </div>

    <div class="ui eigth wide column m-l-5">
        <button type="submit" id="sylius-save" {{ sylius_test_html_attribute('apply-coupon-button') }} class="flex-c-m stext-101 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5" form="{{ main_form }}"><i class="ticket icon"></i> {{ 'sylius.ui.apply_coupon'|trans }}</button>
        {{ form_errors(form.promotionCoupon) }}
    </div>
</div>
