<ul>
    {% if taxons|length > 0 %}
        {% for taxon in taxons %}
            <li class="p-b-10">
                <a href="{{ path('sylius_shop_product_index', {'slug': taxon.slug, '_locale': taxon.translation.locale}) }}" title="{{ taxon.name }}" class="stext-107 cl7 hov-cl1 trans-04">
                    {{ taxon.name }}
                </a>
            </li>
        {% endfor %}
    {% endif %}
</ul>
